@using EasyBuy.Models
@model Product

@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
    Layout = "~/Areas/Admin/Views/Layout/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-edit me-2"></i>Chỉnh sửa sản phẩm
                    </h4>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="UpdateProducts" method="post" enctype="multipart/form-data">
                        <input type="hidden" name="id" value="@Model.ProductId" />
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Tên sản phẩm</label>
                                    <input type="text" class="form-control" name="productname" value="@Model.ProductName" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Barcode</label>
                                    <input type="text" class="form-control" name="barcode" value="@Model.Barcode" />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Số lượng</label>
                                    <input type="number" class="form-control" name="quantity" min="0" value="@Model.Quantity" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Giá nhập</label>
                                    <input type="number" class="form-control" name="importprice" min="0" step="0.01" value="@Model.ImportPrice" />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Giá bán</label>
                                    <input type="number" class="form-control" name="sellingprice" min="0" step="0.01" value="@Model.SellingPrice" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Giảm giá (%)</label>
                                    <input type="number" class="form-control" name="discount" min="0" max="100" value="@Model.Discount" />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Thương hiệu</label>
                                    <select class="form-select" name="brandid">
                                        <option value="">Chọn thương hiệu</option>
                                        @foreach (var brand in ViewBag.Brands)
                                        {
                                            @if (brand.BrandId == Model.BrandId)
                                            {
                                                <option value="@brand.BrandId" selected>@brand.NameBrand</option>
                                            }
                                            else
                                            {
                                                <option value="@brand.BrandId">@brand.NameBrand</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Danh mục</label>
                                    <select class="form-select" name="cateid">
                                        <option value="">Chọn danh mục</option>
                                        @foreach (var category in ViewBag.Categories)
                                        {
                                            @if (category.CateId == Model.CateId)
                                            {
                                                <option value="@category.CateId" selected>@category.CategoryName</option>
                                            }
                                            else
                                            {
                                                <option value="@category.CateId">@category.CategoryName</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Trạng thái</label>
                                    <select class="form-select" name="statusproduct">
                                        @if (Model.StatusProduct == "presently")
                                        {
                                            <option value="presently" selected>Hiển thị</option>
                                        }
                                        else
                                        {
                                            <option value="presently">Hiển thị</option>
                                        }
                                        @if (Model.StatusProduct == "hidden")
                                        {
                                            <option value="hidden" selected>Ẩn</option>
                                        }
                                        else
                                        {
                                            <option value="hidden">Ẩn</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Sản phẩm nổi bật</label>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="isfeatured" value="true" id="isFeatured" @(Model.IsFeatured == true ? "checked" : "")>
                                        <label class="form-check-label" for="isFeatured">
                                            Đánh dấu là sản phẩm nổi bật
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label class="form-label">Mô tả</label>
                                    <textarea class="form-control" name="description" rows="3" placeholder="Nhập mô tả sản phẩm...">@Model.Description</textarea>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label class="form-label">Hình ảnh sản phẩm</label>
                                    <input type="file" class="form-control" name="imagepr" accept="image/*" />
                                    <small class="form-text text-muted">Chỉ chấp nhận file hình ảnh (JPG, PNG, GIF). Để trống nếu không thay đổi ảnh.</small>
                                    @if (!string.IsNullOrEmpty(Model.ImagePr))
                                    {
                                        <div class="mt-2">
                                            <img src="@Model.ImagePr" alt="@Model.ProductName" style="max-width: 200px; border-radius: 8px;" />
                                            <small class="text-muted d-block">Ảnh hiện tại</small>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <div class="alert alert-info">
                                    <h6><i class="fas fa-info-circle me-2"></i>Thông tin sản phẩm hiện tại</h6>
                                    <div class="row">
                                        <div class="col-md-3">
                                            <strong>ID:</strong> @Model.ProductId
                                        </div>
                                        <div class="col-md-3">
                                            <strong>Tên:</strong> @Model.ProductName
                                        </div>
                                        <div class="col-md-3">
                                            <strong>Barcode:</strong> <code>@Model.Barcode</code>
                                        </div>
                                        <div class="col-md-3">
                                            <strong>Cập nhật:</strong> @(Model.UpdatedAt?.ToString("dd/MM/yyyy"))
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("ListProducts", "Products", new { area = "Admin" })" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Quay lại
                            </a>
                            <div>
                                <button type="button" class="btn btn-outline-secondary me-2" onclick="resetForm()">
                                    <i class="fas fa-undo me-2"></i>Khôi phục
                                </button>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-2"></i>Cập nhật
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function resetForm() {
        if (confirm('Bạn có chắc chắn muốn khôi phục lại thông tin ban đầu?')) {
            location.reload();
        }
    }

    // Auto-hide alerts after 5 seconds
    setTimeout(function() {
        $('.alert').fadeOut('slow');
    }, 5000);
</script> 