
@{
    ViewData["Title"] = "Dashboard Admin";
    Layout = "~/Areas/Admin/Views/Layout/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="text-primary mb-0">
                <i class="fas fa-tachometer-alt me-2"></i>Dashboard Admin
            </h2>
            <p class="text-muted">Quản lý tổng quan hệ thống EasyBuy</p>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @ViewBag.Error
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Thống kê tổng quan -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Tổng người dùng
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalUsers</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Tổng sản phẩm
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalProducts</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-box fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Tổng đơn hàng
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalOrders</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-shopping-cart fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Tổng doanh thu
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @string.Format("{0:N0} VNĐ", ViewBag.TotalRevenue)
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Thống kê tháng này -->
    <div class="row mb-4">
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Người dùng mới (tháng này)
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.NewUsersThisMonth</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-plus fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Đơn hàng mới (tháng này)
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.NewOrdersThisMonth</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-plus-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Doanh thu (tháng này)
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @string.Format("{0:N0} VNĐ", ViewBag.RevenueThisMonth)
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-chart-line fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Nội dung chính -->
    <div class="row">
        <!-- Thống kê đơn hàng -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-chart-pie me-2"></i>Thống kê đơn hàng
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6 mb-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="text-muted">Chờ xác nhận</span>
                                <span class="badge bg-warning">@ViewBag.PendingOrders</span>
                            </div>
                        </div>
                        <div class="col-6 mb-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="text-muted">Đã xác nhận</span>
                                <span class="badge bg-info">@ViewBag.ConfirmedOrders</span>
                            </div>
                        </div>
                        <div class="col-6 mb-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="text-muted">Đã giao</span>
                                <span class="badge bg-success">@ViewBag.DeliveredOrders</span>
                            </div>
                        </div>
                        <div class="col-6 mb-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="text-muted">Đã hủy</span>
                                <span class="badge bg-danger">@ViewBag.CancelledOrders</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Thống kê sản phẩm -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-boxes me-2"></i>Thống kê sản phẩm
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6 mb-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="text-muted">Hết hàng</span>
                                <span class="badge bg-danger">@ViewBag.OutOfStockProducts</span>
                            </div>
                        </div>
                        <div class="col-6 mb-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="text-muted">Sắp hết hàng</span>
                                <span class="badge bg-warning">@ViewBag.LowStockProducts</span>
                            </div>
                        </div>
                        <div class="col-6 mb-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="text-muted">Nổi bật</span>
                                <span class="badge bg-success">@ViewBag.FeaturedProducts</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Thống kê người dùng theo vai trò -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-users me-2"></i>Thống kê người dùng theo vai trò
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-2 mb-3">
                            <div class="text-center">
                                <div class="h4 text-primary">@ViewBag.AdminUsers</div>
                                <small class="text-muted">Admin</small>
                            </div>
                        </div>
                        <div class="col-md-2 mb-3">
                            <div class="text-center">
                                <div class="h4 text-info">@ViewBag.NVKDUsers</div>
                                <small class="text-muted">NVKD</small>
                            </div>
                        </div>
                        <div class="col-md-2 mb-3">
                            <div class="text-center">
                                <div class="h4 text-success">@ViewBag.NVKhoUsers</div>
                                <small class="text-muted">NVKho</small>
                            </div>
                        </div>
                        <div class="col-md-2 mb-3">
                            <div class="text-center">
                                <div class="h4 text-warning">@ViewBag.NVMKTUsers</div>
                                <small class="text-muted">NVMKT</small>
                            </div>
                        </div>
                        <div class="col-md-2 mb-3">
                            <div class="text-center">
                                <div class="h4 text-secondary">@ViewBag.CustomerUsers</div>
                                <small class="text-muted">Customer</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Đơn hàng gần đây và sản phẩm bán chạy -->
    <div class="row">
        <!-- Đơn hàng gần đây -->
        <div class="col-lg-8 mb-4">
            <div class="card shadow">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-clock me-2"></i>Đơn hàng gần đây
                    </h6>
                </div>
                <div class="card-body">
                    @if (ViewBag.RecentOrders != null && ViewBag.RecentOrders.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Mã đơn</th>
                                        <th>Khách hàng</th>
                                        <th>Tổng tiền</th>
                                        <th>Trạng thái</th>
                                        <th>Ngày tạo</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in ViewBag.RecentOrders)
                                    {
                                        <tr>
                                            <td>
                                                <strong>#@order.OrderId</strong>
                                            </td>
                                            <td>
                                                <div>
                                                    <strong>@(order.User?.FullName ?? "N/A")</strong>
                                                    <br>
                                                    <small class="text-muted">@(order.User?.Phone ?? "N/A")</small>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="text-success fw-bold">
                                                    @string.Format("{0:N0} VNĐ", order.TotalAmount)
                                                </span>
                                            </td>
                                            <td>
                                                @if (order.Status == "Chờ xác nhận")
                                                {
                                                    <span class="badge bg-warning">Chờ xác nhận</span>
                                                }
                                                else if (order.Status == "Đã xác nhận")
                                                {
                                                    <span class="badge bg-info">Đã xác nhận</span>
                                                }
                                                else if (order.Status == "Đã giao")
                                                {
                                                    <span class="badge bg-success">Đã giao</span>
                                                }
                                                else if (order.Status == "Đã hủy")
                                                {
                                                    <span class="badge bg-danger">Đã hủy</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">@order.Status</span>
                                                }
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    @(order.CreatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")
                                                </small>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Chưa có đơn hàng nào</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Sản phẩm bán chạy -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-fire me-2"></i>Sản phẩm bán chạy
                    </h6>
                </div>
                <div class="card-body">
                    @if (ViewBag.TopViewedProducts != null && ViewBag.TopViewedProducts.Count > 0)
                    {
                        @foreach (var product in ViewBag.TopViewedProducts)
                        {
                            <div class="d-flex align-items-center mb-3">
                                @if (!string.IsNullOrEmpty(product.ImagePr))
                                {
                                    <img src="@product.ImagePr" alt="@product.ProductName" 
                                         style="width: 40px; height: 40px; object-fit: cover; border-radius: 4px;" />
                                }
                                else
                                {
                                    <div class="bg-light d-flex align-items-center justify-content-center" 
                                         style="width: 40px; height: 40px; border-radius: 4px;">
                                        <i class="fas fa-image text-muted"></i>
                                    </div>
                                }
                                <div class="ms-3 flex-grow-1">
                                    <div class="fw-bold">@product.ProductName</div>
                                    <small class="text-muted">
                                        <i class="fas fa-eye me-1"></i>@(product.ViewCount ?? 0) lượt xem
                                    </small>
                                </div>
                                <div class="text-end">
                                    <div class="text-success fw-bold">
                                        @string.Format("{0:N0} VNĐ", product.SellingPrice)
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-box fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Chưa có sản phẩm nào</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Thống kê danh mục và thương hiệu -->
    <div class="row">
        @if (ViewBag.CategoryStats != null && ViewBag.CategoryStats.Count > 0)
        {
            <div class="col-lg-6 mb-4">
                <div class="card shadow">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">
                            <i class="fas fa-chart-bar me-2"></i>Thống kê theo danh mục
                        </h6>
                    </div>
                    <div class="card-body">
                        @foreach (var category in ViewBag.CategoryStats)
                        {
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span class="text-muted">@category.Category</span>
                                <div class="d-flex align-items-center">
                                    <div class="progress me-2" style="width: 100px; height: 8px;">
                                        <div class="progress-bar bg-primary" style="width: @(category.Count * 100 / ViewBag.TotalProducts)%"></div>
                                    </div>
                                    <span class="badge bg-primary">@category.Count</span>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }

        @if (ViewBag.BrandStats != null && ViewBag.BrandStats.Count > 0)
        {
            <div class="col-lg-6 mb-4">
                <div class="card shadow">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">
                            <i class="fas fa-chart-pie me-2"></i>Thống kê theo thương hiệu
                        </h6>
                    </div>
                    <div class="card-body">
                        @foreach (var brand in ViewBag.BrandStats)
                        {
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span class="text-muted">@brand.Brand</span>
                                <div class="d-flex align-items-center">
                                    <div class="progress me-2" style="width: 100px; height: 8px;">
                                        <div class="progress-bar bg-success" style="width: @(brand.Count * 100 / ViewBag.TotalProducts)%"></div>
                                    </div>
                                    <span class="badge bg-success">@brand.Count</span>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Quick Actions -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-bolt me-2"></i>Thao tác nhanh
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <a href="/Admin/Users/ListUsers" class="btn btn-outline-primary w-100">
                                <i class="fas fa-users me-1"></i>Quản lý người dùng
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="/Admin/Products/ListProducts" class="btn btn-outline-success w-100">
                                <i class="fas fa-boxes me-1"></i>Quản lý sản phẩm
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="/Admin/Orders/ListOrders" class="btn btn-outline-info w-100">
                                <i class="fas fa-shopping-cart me-1"></i>Quản lý đơn hàng
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="/Admin/Categories/ListCategories" class="btn btn-outline-warning w-100">
                                <i class="fas fa-tags me-1"></i>Quản lý danh mục
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .border-left-primary {
        border-left: 0.25rem solid #4e73df !important;
    }
    .border-left-success {
        border-left: 0.25rem solid #1cc88a !important;
    }
    .border-left-info {
        border-left: 0.25rem solid #36b9cc !important;
    }
    .border-left-warning {
        border-left: 0.25rem solid #f6c23e !important;
    }
    .text-gray-300 {
        color: #dddfeb !important;
    }
    .text-gray-800 {
        color: #5a5c69 !important;
    }
    .card {
        border: none;
        border-radius: 0.35rem;
    }
    .card-header {
        background-color: #f8f9fc;
        border-bottom: 1px solid #e3e6f0;
    }
</style>

