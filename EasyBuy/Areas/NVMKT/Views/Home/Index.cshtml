
@{
    ViewData["Title"] = "Trang chủ - NVMKT";
    Layout = "~/Areas/NVMKT/Views/Layout/_LayoutNVMKT.cshtml";

}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="text-primary mb-0">
                <i class="fas fa-chart-line me-2"></i>Dashboard Marketing
            </h2>
            <p class="text-muted">Chào mừng bạn đến với hệ thống quản lý marketing</p>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @ViewBag.Error
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Thống kê tổng quan -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Tổng số sản phẩm
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalProducts</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-box fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Sản phẩm nổi bật
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.FeaturedProducts</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-star fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Sản phẩm hết hàng
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.OutOfStockProducts</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-exclamation-triangle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Sản phẩm sắp hết hàng
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.LowStockProducts</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clock fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Nội dung chính -->
    <div class="row">
        <!-- Sản phẩm nổi bật -->
        <div class="col-lg-8 mb-4">
            <div class="card shadow">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-star me-2"></i>Sản phẩm nổi bật
                    </h6>
                    <a href="/NVMKT/Products/ListProducts" class="btn btn-sm btn-primary">
                        <i class="fas fa-eye me-1"></i>Xem tất cả
                    </a>
                </div>
                <div class="card-body">
                    @if (ViewBag.FeaturedProductsList != null && ViewBag.FeaturedProductsList.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Hình ảnh</th>
                                        <th>Tên sản phẩm</th>
                                        <th>Danh mục</th>
                                        <th>Thương hiệu</th>
                                        <th>Giá bán</th>
                                        <th>Tồn kho</th>
                                        <th>Lượt xem</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in ViewBag.FeaturedProductsList)
                                    {
                                        <tr>
                                            <td>
                                                @if (!string.IsNullOrEmpty(product.ImagePr))
                                                {
                                                    <img src="@product.ImagePr" alt="@product.ProductName" 
                                                         style="width: 50px; height: 50px; object-fit: cover;" />
                                                }
                                                else
                                                {
                                                    <div class="bg-light d-flex align-items-center justify-content-center" 
                                                         style="width: 50px; height: 50px;">
                                                        <i class="fas fa-image text-muted"></i>
                                                    </div>
                                                }
                                            </td>
                                            <td>
                                                <strong>@product.ProductName</strong>
                                                <br>
                                                <small class="text-muted">@product.Barcode</small>
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@(product.Cate?.CategoryName ?? "N/A")</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">@(product.Brand?.NameBrand ?? "N/A")</span>
                                            </td>
                                            <td>
                                                <span class="text-success fw-bold">
                                                    @string.Format("{0:N0} VNĐ", product.SellingPrice)
                                                </span>
                                            </td>
                                            <td>
                                                @if (product.Quantity <= 0)
                                                {
                                                    <span class="badge bg-danger">Hết hàng</span>
                                                }
                                                else if (product.Quantity <= 10)
                                                {
                                                    <span class="badge bg-warning">@product.Quantity</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">@product.Quantity</span>
                                                }
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    <i class="fas fa-eye me-1"></i>@(product.ViewCount ?? 0)
                                                </small>
                                            </td>
                                            <td>
                                                <a href="/NVMKT/Products/EditProduct/@product.ProductId" 
                                                   class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-star fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Chưa có sản phẩm nổi bật nào</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Thống kê nhanh -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-chart-pie me-2"></i>Thống kê nhanh
                    </h6>
                </div>
                <div class="card-body">
                    <!-- Sản phẩm sắp hết hàng -->
                    @if (ViewBag.LowStockProductsList != null && ViewBag.LowStockProductsList.Count > 0)
                    {
                        <div class="mb-4">
                            <h6 class="text-warning mb-3">
                                <i class="fas fa-exclamation-triangle me-1"></i>Sản phẩm sắp hết hàng
                            </h6>
                            @foreach (var product in ViewBag.LowStockProductsList)
                            {
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="text-muted small">@product.ProductName</span>
                                    <span class="badge bg-warning">@product.Quantity</span>
                                </div>
                            }
                        </div>
                    }

                    <!-- Thống kê đơn hàng -->
                    @if (ViewBag.OrderStatusStats != null)
                    {
                        <div class="mb-4">
                            <h6 class="text-primary mb-3">Trạng thái đơn hàng</h6>
                            @foreach (var stat in ViewBag.OrderStatusStats)
                            {
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="text-muted">
                                        @(stat.Status == "Chờ xác nhận" ? "Chờ xác nhận" : 
                                          stat.Status == "Đã xác nhận" ? "Đã xác nhận" : 
                                          stat.Status == "Đã hủy" ? "Đã hủy" : 
                                          stat.Status == "Đã giao" ? "Đã giao" :
                                          stat.Status ?? "Không xác định")
                                    </span>
                                    <span class="badge bg-primary">@stat.Count</span>
                                </div>
                            }
                        </div>
                    }

                    <!-- Quick Actions -->
                    <div class="mt-4">
                        <h6 class="font-weight-bold text-primary mb-3">
                            <i class="fas fa-bolt me-2"></i>Thao tác nhanh
                        </h6>
                        <div class="d-grid gap-2">
                            <a href="/NVMKT/Products/ListProducts" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-boxes me-1"></i>Quản lý sản phẩm
                            </a>
                            <a href="/NVMKT/Products/CreateProducts" class="btn btn-outline-success btn-sm">
                                <i class="fas fa-plus me-1"></i>Thêm sản phẩm mới
                            </a>
                            <a href="/NVMKT/Categories/ListCategories" class="btn btn-outline-info btn-sm">
                                <i class="fas fa-tags me-1"></i>Quản lý danh mục
                            </a>
                            <a href="/NVMKT/Brands/ListBrands" class="btn btn-outline-warning btn-sm">
                                <i class="fas fa-crown me-1"></i>Quản lý thương hiệu
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Thống kê sản phẩm theo danh mục và thương hiệu -->
    <div class="row">
        <!-- Thống kê theo danh mục -->
        @if (ViewBag.CategoryStats != null && ViewBag.CategoryStats.Count > 0)
        {
            <div class="col-lg-6 mb-4">
                <div class="card shadow">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">
                            <i class="fas fa-chart-bar me-2"></i>Thống kê theo danh mục
                        </h6>
                    </div>
                    <div class="card-body">
                        @foreach (var category in ViewBag.CategoryStats)
                        {
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span class="text-muted">@category.Category</span>
                                <div class="d-flex align-items-center">
                                    <div class="progress me-2" style="width: 100px; height: 8px;">
                                        <div class="progress-bar bg-primary" style="width: @(category.Count * 100 / ViewBag.TotalProducts)%"></div>
                                    </div>
                                    <span class="badge bg-primary">@category.Count</span>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }

        <!-- Thống kê theo thương hiệu -->
        @if (ViewBag.BrandStats != null && ViewBag.BrandStats.Count > 0)
        {
            <div class="col-lg-6 mb-4">
                <div class="card shadow">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">
                            <i class="fas fa-chart-pie me-2"></i>Thống kê theo thương hiệu
                        </h6>
                    </div>
                    <div class="card-body">
                        @foreach (var brand in ViewBag.BrandStats)
                        {
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span class="text-muted">@brand.Brand</span>
                                <div class="d-flex align-items-center">
                                    <div class="progress me-2" style="width: 100px; height: 8px;">
                                        <div class="progress-bar bg-success" style="width: @(brand.Count * 100 / ViewBag.TotalProducts)%"></div>
                                    </div>
                                    <span class="badge bg-success">@brand.Count</span>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Sản phẩm có lượt xem cao nhất -->
    @if (ViewBag.TopViewedProducts != null && ViewBag.TopViewedProducts.Count > 0)
    {
        <div class="row">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">
                            <i class="fas fa-fire me-2"></i>Sản phẩm có lượt xem cao nhất
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @foreach (var product in ViewBag.TopViewedProducts)
                            {
                                <div class="col-md-3 mb-3">
                                    <div class="card h-100">
                                        <div class="card-body text-center">
                                            @if (!string.IsNullOrEmpty(product.ImagePr))
                                            {
                                                <img src="@product.ImagePr" alt="@product.ProductName" 
                                                     class="img-fluid mb-2" style="height: 100px; object-fit: cover;" />
                                            }
                                            else
                                            {
                                                <div class="bg-light d-flex align-items-center justify-content-center mb-2" 
                                                     style="height: 100px;">
                                                    <i class="fas fa-image fa-2x text-muted"></i>
                                                </div>
                                            }
                                            <h6 class="card-title">@product.ProductName</h6>
                                            <p class="text-success fw-bold">
                                                @string.Format("{0:N0} VNĐ", product.SellingPrice)
                                            </p>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <small class="text-muted">
                                                    <i class="fas fa-eye me-1"></i>@(product.ViewCount ?? 0)
                                                </small>
                                                <a href="/NVMKT/Products/EditProduct/@product.ProductId" 
                                                   class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Thông tin hệ thống -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-info-circle me-2"></i>Thông tin hệ thống
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-primary">Hướng dẫn sử dụng:</h6>
                            <ul class="list-unstyled">
                                <li><i class="fas fa-arrow-right text-primary me-2"></i>Quản lý thông tin sản phẩm trong mục "Quản lý sản phẩm"</li>
                                <li><i class="fas fa-arrow-right text-primary me-2"></i>Thêm sản phẩm mới với đầy đủ thông tin</li>
                                <li><i class="fas fa-arrow-right text-primary me-2"></i>Cập nhật giá, hình ảnh và thông tin sản phẩm</li>
                                <li><i class="fas fa-arrow-right text-primary me-2"></i>Đặt sản phẩm nổi bật để tăng doanh số</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-primary">Lưu ý:</h6>
                            <ul class="list-unstyled">
                                <li><i class="fas fa-exclamation-triangle text-warning me-2"></i>Kiểm tra sản phẩm sắp hết hàng thường xuyên</li>
                                <li><i class="fas fa-exclamation-triangle text-warning me-2"></i>Cập nhật giá sản phẩm theo thị trường</li>
                                <li><i class="fas fa-exclamation-triangle text-warning me-2"></i>Đảm bảo hình ảnh sản phẩm chất lượng cao</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .border-left-primary {
        border-left: 0.25rem solid #4e73df !important;
    }
    .border-left-success {
        border-left: 0.25rem solid #1cc88a !important;
    }
    .border-left-info {
        border-left: 0.25rem solid #36b9cc !important;
    }
    .border-left-warning {
        border-left: 0.25rem solid #f6c23e !important;
    }
    .text-gray-300 {
        color: #dddfeb !important;
    }
    .text-gray-800 {
        color: #5a5c69 !important;
    }
    .card {
        border: none;
        border-radius: 0.35rem;
    }
    .card-header {
        background-color: #f8f9fc;
        border-bottom: 1px solid #e3e6f0;
    }
</style>

