@{
    ViewBag.Title = "Kết quả tạo hóa đơn xuất kho";
    Layout = "~/Areas/NVKho/Views/Layout/_LayoutNVKho.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            @if (ViewBag.Susses != null)
            {
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-success text-white text-center">
                        <h3 class="mb-0">
                            <i class="fas fa-check-circle fa-2x mb-2"></i><br>
                            Tạo hóa đơn xuất kho thành công!
                        </h3>
                    </div>
                    <div class="card-body text-center py-5">
                        <div class="mb-4">
                            <i class="fas fa-file-invoice fa-4x text-success mb-3"></i>
                            <h4 class="text-success">@ViewBag.Susses</h4>
                            <p class="text-muted">Hóa đơn xuất kho đã được tạo thành công và sẵn sàng để xuất hàng.</p>
                        </div>
                        
                        <div class="row text-center mb-4">
                            <div class="col-md-3">
                                <div class="bg-light p-3 rounded">
                                    <i class="fas fa-file-invoice text-success"></i>
                                    <h6 class="mt-2">Mã hóa đơn</h6>
                                    <small class="text-muted">#@(ViewBag.InvoiceId ?? "N/A")</small>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="bg-light p-3 rounded">
                                    <i class="fas fa-shopping-cart text-primary"></i>
                                    <h6 class="mt-2">Đơn hàng</h6>
                                    <small class="text-muted">#@(ViewBag.OrderId ?? "N/A")</small>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="bg-light p-3 rounded">
                                    <i class="fas fa-boxes text-info"></i>
                                    <h6 class="mt-2">Tổng số lượng</h6>
                                    <small class="text-muted">@(ViewBag.TotalQuantity ?? 0) sản phẩm</small>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="bg-light p-3 rounded">
                                    <i class="fas fa-clock text-warning"></i>
                                    <h6 class="mt-2">Thời gian</h6>
                                    <small class="text-muted">@DateTime.Now.ToString("HH:mm")</small>
                                </div>
                            </div>
                        </div>
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                            <a href="@Url.Action("ListOrderConfirm")" class="btn btn-primary btn-lg me-md-2">
                                <i class="fas fa-list"></i> Quay lại danh sách
                            </a>
                            <a href="@Url.Action("ListInvoiceWarehouse")" class="btn btn-outline-success btn-lg">
                                <i class="fas fa-file-alt"></i> Xem hóa đơn
                            </a>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-danger text-white text-center">
                        <h3 class="mb-0">
                            <i class="fas fa-exclamation-triangle fa-2x mb-2"></i><br>
                            Có lỗi xảy ra!
                        </h3>
                    </div>
                    <div class="card-body text-center py-5">
                        <div class="mb-4">
                            <i class="fas fa-times-circle fa-4x text-danger mb-3"></i>
                            <h4 class="text-danger">Không thể tạo hóa đơn xuất kho</h4>
                            <p class="text-muted">Đã xảy ra lỗi trong quá trình tạo hóa đơn. Vui lòng thử lại sau.</p>
                        </div>
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                            <a href="@Url.Action("ListOrderConfirm")" class="btn btn-primary btn-lg me-md-2">
                                <i class="fas fa-arrow-left"></i> Quay lại
                            </a>
                            <button onclick="history.back()" class="btn btn-outline-secondary btn-lg">
                                <i class="fas fa-redo"></i> Thử lại
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 15px;
        overflow: hidden;
    }
    
    .card-header {
        border-radius: 0;
    }
    
    .bg-light {
        background-color: #f8f9fa !important;
        border-radius: 10px;
    }
    
    .btn {
        border-radius: 25px;
        padding: 10px 25px;
        font-weight: 600;
    }
    
    .fa-4x {
        font-size: 4rem;
    }
    
    .fa-2x {
        font-size: 2rem;
    }
    
    .text-success {
        color: #28a745 !important;
    }
    
    .text-danger {
        color: #dc3545 !important;
    }
    
    .shadow-lg {
        box-shadow: 0 1rem 3rem rgba(0, 0, 0, 0.175) !important;
    }
</style>

<script>
    // Auto redirect after 5 seconds if success
    @if (ViewBag.Susses != null)
    {
        <text>
        setTimeout(function() {
            if (confirm('Bạn có muốn chuyển đến danh sách hóa đơn không?')) {
                window.location.href = '@Url.Action("ListInvoiceWarehouse")';
            }
        }, 5000);
        </text>
    }
</script> 