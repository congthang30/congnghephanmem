@{
    ViewData["Title"] = "Trang chủ - NVKho";
    Layout = "~/Areas/NVKho/Views/Layout/_LayoutNVKho.cshtml";

}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="text-primary mb-0">
                <i class="fas fa-warehouse me-2"></i>Dashboard NVKho
            </h2>
            <p class="text-muted">Chào mừng bạn đến với hệ thống quản lý kho</p>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @ViewBag.Error
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Thống kê tổng quan -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Đơn hàng chờ xử lý hôm nay
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.PendingOrdersToday</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clock fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Đơn hàng đã xử lý hôm nay
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.ProcessedOrdersToday</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Đơn hàng chờ xử lý tháng này
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.PendingOrdersThisMonth</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Nội dung chính -->
    <div class="row">
        <!-- Đơn hàng chờ xử lý -->
        <div class="col-lg-8 mb-4">
            <div class="card shadow">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-clock me-2"></i>Đơn hàng chờ xử lý
                    </h6>
                    <a href="/NVKho/InvoiceWareHouseNVKho/ListOrderConfirm" class="btn btn-sm btn-primary">
                        <i class="fas fa-eye me-1"></i>Xem tất cả
                    </a>
                </div>
                <div class="card-body">
                    @if (ViewBag.RecentPendingOrders != null && ViewBag.RecentPendingOrders.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Mã đơn hàng</th>
                                        <th>Khách hàng</th>
                                        <th>Địa chỉ</th>
                                        <th>Tổng tiền</th>
                                        <th>Ngày tạo</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in ViewBag.RecentPendingOrders)
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge bg-primary">#@order.OrderId</span>
                                            </td>
                                            <td>
                                                <div>
                                                    <strong>@(order.User?.FullName ?? "N/A")</strong>
                                                    <br>
                                                    <small class="text-muted">@(order.User?.Phone ?? "N/A")</small>
                                                </div>
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    @(order.Address?.FullAddress ?? "N/A")
                                                </small>
                                            </td>
                                            <td>
                                                <span class="text-success fw-bold">
                                                    @string.Format("{0:N0} VNĐ", order.TotalAmount)
                                                </span>
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    @(order.CreatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")
                                                </small>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Không có đơn hàng nào chờ xử lý</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Thống kê nhanh -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-chart-pie me-2"></i>Thống kê nhanh
                    </h6>
                </div>
                <div class="card-body">
                    <!-- Thống kê đơn hàng -->
                    @if (ViewBag.OrderStatusStats != null)
                    {
                        <div class="mb-4">
                            <h6 class="text-primary mb-3">Trạng thái đơn hàng</h6>
                            @foreach (var stat in ViewBag.OrderStatusStats)
                            {
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="text-muted">
                                        @(stat.Status == "Chờ xác nhận" ? "Chờ xác nhận" : 
                                          stat.Status == "Đã xác nhận" ? "Đã xác nhận" : 
                                          stat.Status == "Đã hủy" ? "Đã hủy" : 
                                          stat.Status == "Đã giao" ? "Đã giao" :
                                          stat.Status ?? "Không xác định")
                                    </span>
                                    <span class="badge bg-primary">@stat.Count</span>
                                </div>
                            }
                        </div>
                    }

                    <!-- Sản phẩm tồn kho thấp -->
                    @if (ViewBag.LowStockProducts != null && ViewBag.LowStockProducts.Count > 0)
                    {
                        <div class="mb-4">
                            <h6 class="text-warning mb-3">
                                <i class="fas fa-exclamation-triangle me-1"></i>Sản phẩm tồn kho thấp
                            </h6>
                            @foreach (var product in ViewBag.LowStockProducts)
                            {
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="text-muted small">@product.ProductName</span>
                                    <span class="badge bg-warning">@product.Quantity</span>
                                </div>
                            }
                        </div>
                    }

                    <!-- Quick Actions -->
                    <div class="mt-4">
                        <h6 class="font-weight-bold text-primary mb-3">
                            <i class="fas fa-bolt me-2"></i>Thao tác nhanh
                        </h6>
                        <div class="d-grid gap-2">
                            <a href="/NVKho/InvoiceWareHouseNVKho/ListOrderConfirm" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-box me-1"></i>Xử lý đơn hàng
                            </a>
                            <a href="/NVKho/InvoiceWareHouseNVKho/ListInvoiceWarehouse" class="btn btn-outline-success btn-sm">
                                <i class="fas fa-file-invoice me-1"></i>Danh sách hóa đơn
                            </a>
                            <a href="/NVKho/Products/ListProducts" class="btn btn-outline-info btn-sm">
                                <i class="fas fa-boxes me-1"></i>Quản lý sản phẩm
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Thống kê sản phẩm theo danh mục -->
    @if (ViewBag.CategoryStats != null && ViewBag.CategoryStats.Count > 0)
    {
        <div class="row">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">
                            <i class="fas fa-chart-bar me-2"></i>Thống kê sản phẩm theo danh mục
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @foreach (var category in ViewBag.CategoryStats)
                            {
                                <div class="col-md-3 mb-3">
                                    <div class="border rounded p-3 text-center">
                                        <h6 class="text-primary">@category.Category</h6>
                                        <span class="badge bg-info fs-6">@category.Count sản phẩm</span>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Thông tin hệ thống -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-info-circle me-2"></i>Thông tin hệ thống
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-primary">Hướng dẫn sử dụng:</h6>
                            <ul class="list-unstyled">
                                <li><i class="fas fa-arrow-right text-primary me-2"></i>Kiểm tra đơn hàng đã xác nhận trong mục "Xử lý đơn hàng"</li>
                                <li><i class="fas fa-arrow-right text-primary me-2"></i>Chuẩn bị sản phẩm theo đơn hàng</li>
                                <li><i class="fas fa-arrow-right text-primary me-2"></i>Cập nhật trạng thái đơn hàng thành "Đã giao"</li>
                                <li><i class="fas fa-arrow-right text-primary me-2"></i>Kiểm tra tồn kho sản phẩm thường xuyên</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-primary">Lưu ý:</h6>
                            <ul class="list-unstyled">
                                <li><i class="fas fa-exclamation-triangle text-warning me-2"></i>Kiểm tra đầy đủ sản phẩm trước khi giao hàng</li>
                                <li><i class="fas fa-exclamation-triangle text-warning me-2"></i>Đảm bảo chất lượng sản phẩm trước khi đóng gói</li>
                                <li><i class="fas fa-exclamation-triangle text-warning me-2"></i>Báo cáo sản phẩm tồn kho thấp cho quản lý</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .border-left-primary {
        border-left: 0.25rem solid #4e73df !important;
    }
    .border-left-success {
        border-left: 0.25rem solid #1cc88a !important;
    }
    .border-left-info {
        border-left: 0.25rem solid #36b9cc !important;
    }
    .border-left-warning {
        border-left: 0.25rem solid #f6c23e !important;
    }
    .text-gray-300 {
        color: #dddfeb !important;
    }
    .text-gray-800 {
        color: #5a5c69 !important;
    }
    .card {
        border: none;
        border-radius: 0.35rem;
    }
    .card-header {
        background-color: #f8f9fc;
        border-bottom: 1px solid #e3e6f0;
    }
</style> 