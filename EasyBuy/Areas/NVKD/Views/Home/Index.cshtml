@{
    ViewData["Title"] = "Trang chủ - NVKD";
    Layout = "~/Areas/NVKD/Views/Layout/_LayoutNVKD.cshtml";

}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="text-primary mb-0">
                <i class="fas fa-tachometer-alt me-2"></i>Dashboard NVKD
            </h2>
            <p class="text-muted">Chào mừng bạn đến với hệ thống quản lý đơn hàng</p>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @ViewBag.Error
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Thống kê tổng quan -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Đơn hàng mới hôm nay
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.NewOrdersToday</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-shopping-cart fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Đơn hàng đã xác nhận hôm nay
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.ConfirmedOrdersToday</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Đơn hàng mới tháng này
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.NewOrdersThisMonth</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Doanh thu tháng này
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @string.Format("{0:N0} VNĐ", ViewBag.TotalRevenueThisMonth)
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Nội dung chính -->
    <div class="row">
        <!-- Đơn hàng gần đây -->
        <div class="col-lg-8 mb-4">
            <div class="card shadow">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-clock me-2"></i>Đơn hàng mới nhất
                    </h6>
                    <a href="/NVKD/OrderNVKD/ListOrderNew" class="btn btn-sm btn-primary">
                        <i class="fas fa-eye me-1"></i>Xem tất cả
                    </a>
                </div>
                <div class="card-body">
                    @if (ViewBag.RecentOrders != null && ViewBag.RecentOrders.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Mã đơn hàng</th>
                                        <th>Khách hàng</th>
                                        <th>Tổng tiền</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in ViewBag.RecentOrders)
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge bg-primary">#@order.OrderId</span>
                                            </td>
                                            <td>
                                                <div>
                                                    <strong>@(order.User?.FullName ?? "N/A")</strong>
                                                    <br>
                                                    <small class="text-muted">@(order.User?.Phone ?? "N/A")</small>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="text-success fw-bold">
                                                    @string.Format("{0:N0} VNĐ", order.TotalAmount)
                                                </span>
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    @(order.CreatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")
                                                </small>
                                            </td>
                                            <td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Chưa có đơn hàng mới nào</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Thống kê nhanh -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-chart-pie me-2"></i>Thống kê đơn hàng
                    </h6>
                </div>
                <div class="card-body">
                    @if (ViewBag.OrderStatusStats != null)
                    {
                        <div class="mb-3">
                                                         @if (ViewBag.OrderStatusStats != null)
                             {
                                 @foreach (var stat in ViewBag.OrderStatusStats)
                                 {
                                     <div class="d-flex justify-content-between align-items-center mb-2">
                                         <span class="text-muted">
                                                                                      @(stat.Status == "Chờ xác nhận" ? "Chờ xác nhận" : 
                                           stat.Status == "Đã xác nhận" ? "Đã xác nhận" : 
                                           stat.Status == "Đã hủy" ? "Đã hủy" : 
                                           stat.Status == "Đã giao" ? "Đã giao" :
                                           stat.Status ?? "Không xác định")
                                         </span>
                                         <span class="badge bg-primary">@stat.Count</span>
                                     </div>
                                 }
                             }
                        </div>
                    }

                    <!-- Quick Actions -->
                    <div class="mt-4">
                        <h6 class="font-weight-bold text-primary mb-3">
                            <i class="fas fa-bolt me-2"></i>Thao tác nhanh
                        </h6>
                        <div class="d-grid gap-2">
                            <a href="/NVKD/OrderNVKD/ListOrderNew" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-shopping-cart me-1"></i>Xem đơn hàng mới
                            </a>
                            <a href="/NVKD/OrderNVKD/ListOrderConfirmed" class="btn btn-outline-success btn-sm">
                                <i class="fas fa-check-circle me-1"></i>Đơn hàng đã xác nhận
                            </a>
                            <a href="/NVKD/InvoiceNVKD/ListInvoice" class="btn btn-outline-info btn-sm">
                                <i class="fas fa-file-invoice me-1"></i>Danh sách hóa đơn
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Thông tin hệ thống -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-info-circle me-2"></i>Thông tin hệ thống
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-primary">Hướng dẫn sử dụng:</h6>
                            <ul class="list-unstyled">
                                <li><i class="fas fa-arrow-right text-primary me-2"></i>Kiểm tra đơn hàng mới trong mục "Đơn hàng mới"</li>
                                <li><i class="fas fa-arrow-right text-primary me-2"></i>Xác nhận đơn hàng khi đã kiểm tra thông tin</li>
                                <li><i class="fas fa-arrow-right text-primary me-2"></i>Theo dõi đơn hàng đã xác nhận</li>
                                <li><i class="fas fa-arrow-right text-primary me-2"></i>Xem danh sách hóa đơn đã tạo</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-primary">Lưu ý:</h6>
                            <ul class="list-unstyled">
                                <li><i class="fas fa-exclamation-triangle text-warning me-2"></i>Luôn kiểm tra thông tin khách hàng trước khi xác nhận</li>
                                <li><i class="fas fa-exclamation-triangle text-warning me-2"></i>Đảm bảo đơn hàng có đầy đủ thông tin giao hàng</li>
                                <li><i class="fas fa-exclamation-triangle text-warning me-2"></i>Liên hệ khách hàng nếu có thông tin không rõ ràng</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .border-left-primary {
        border-left: 0.25rem solid #4e73df !important;
    }
    .border-left-success {
        border-left: 0.25rem solid #1cc88a !important;
    }
    .border-left-info {
        border-left: 0.25rem solid #36b9cc !important;
    }
    .border-left-warning {
        border-left: 0.25rem solid #f6c23e !important;
    }
    .text-gray-300 {
        color: #dddfeb !important;
    }
    .text-gray-800 {
        color: #5a5c69 !important;
    }
    .card {
        border: none;
        border-radius: 0.35rem;
    }
    .card-header {
        background-color: #f8f9fc;
        border-bottom: 1px solid #e3e6f0;
    }
</style> 