{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=.;Initial Catalog=EasyBuy;Integrated Security=True;Encrypt=True;Trust Server Certificate=True"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "Smtp": {
    "Host": "smtp.gmail.com",
    "Port": "587",
    "User": "[your-email]@gmail.com",
    "Pass": "[your-smtp-password]",
    "From": "[your-email]@gmail.com"
  },
  "Vnpay": {
    "TmnCode": "[your-vnpay-tmn-code]",
    "HashSecret": "[your-vnpay-secret]",
    "BaseUrl": "https://sandbox.vnpayment.vn/paymentv2/vpcpay.html",
    "Command": "pay",
    "CurrCode": "VND",
    "Version": "2.1.0",
    "Locale": "vn",
    "PaymentBackReturnUrl": "http://localhost:5172/Checkout/PaymentCallbackVnpay"
  },
  "TimeZoneId": "SE Asia Standard Time",

  "MomoAPI": {
    "MomoApiUrl": "https://test-payment.momo.vn/gw_payment/transactionProcessor",
    "SecretKey": "[your-momo-secret]",
    "AccessKey": "[your-momo-access-key]",
    "ReturnUrl": "http://localhost:5172/Checkout/PaymentCallBack",
    "NotifyUrl": "http://localhost:5172/Checkout/MomoNotify",
    "PartnerCode": "[your-momo-partner-code]",
    "RequestType": "captureMoMoWallet"
  },
  "GoogleKeys": {
    "ClientId": "[your-google-client-id]",
    "ClientSecret": "[your-google-client-secret]"
  },
  "GeminiApi": {
    "ApiKey": "[your-gemini-api-key]",
    "BaseUrl": "https://generativelanguage.googleapis.com/v1beta/models"
  }
}